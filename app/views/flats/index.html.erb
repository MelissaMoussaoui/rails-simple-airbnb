<h1> All our flats (<%= @flats.size %>) </h1>

<div class="row">
    <div class="col-sm-4">

<% @flats.each do |flat| %>

        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= flat.name %></h5>
                <p class="card-text"><%= flat.address %></p>
                <i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %> <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %>
            </div>
            <div class="card-footer">
                <i class="fa-solid fa-circle-info"></i>
                <a href="#" class="card-link"> More info</a>
            </div>
        </div>
    </div>

<% end %>

</div>